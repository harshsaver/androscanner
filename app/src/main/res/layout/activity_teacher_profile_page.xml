<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black"
    tools:context=".TeacherProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/light"
            android:text="Full Name"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/light"
            android:layout_marginLeft="16dp"
            android:text="Short description" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/classses" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/white"
                android:fontFamily="@font/light"
                android:textSize="13sp"
                android:text="Degree Name" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/light"
                android:textSize="13sp"
                android:layout_marginLeft="225dp"
                android:text="Born 3 Jun3, 1999" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/school" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/light"
                android:textSize="13sp"
                android:layout_marginLeft="40dp"
                android:text="Currently Teaching" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="15dp"
            android:background="@drawable/rounded_heading"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:text="Personal Information" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/black_bg_green">

            <ListView
                android:id="@+id/profileList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="15dp"
            android:background="@drawable/round_head1"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:text="Specialization/Education" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/black_bg_red">

            <ListView
                android:id="@+id/educationList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:paddingLeft="15dp"
            android:background="@drawable/round_head2"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:text="Classes Teaching" />
        <RelativeLayout
            android:background="@color/black_bg_blue"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="12.5dp"
                            app:srcCompat="@drawable/tablet" />

                        <TextView
                            android:id="@+id/imageView19"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView11"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginBottom="-1dp"
                            android:fontFamily="@font/light"
                            android:text="History"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="12.5dp"
                            app:srcCompat="@drawable/microscope" />

                        <TextView
                            android:id="@+id/imageView20"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView12"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginBottom="-1dp"
                            android:fontFamily="@font/light"
                            android:text="Science"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="12.5dp"
                            app:srcCompat="@drawable/calculating" />

                        <TextView
                            android:id="@+id/imageView21"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView13"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginBottom="-1dp"
                            android:fontFamily="@font/light"
                            android:text="Maths"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/round_head3"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:paddingLeft="15dp"
            android:text="Clubs part of" />
        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="12.5dp"
                            app:srcCompat="@drawable/dance" />

                        <TextView
                            android:id="@+id/imageView22"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView15"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginBottom="-1dp"
                            android:fontFamily="@font/light"
                            android:text="Dance"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="12.5dp"
                            app:srcCompat="@drawable/artist" />

                        <TextView
                            android:id="@+id/imageView23"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginBottom="-1dp"
                            android:fontFamily="@font/light"
                            android:text="Art"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView24"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="12.5dp"
                            app:srcCompat="@drawable/comedy" />

                        <TextView
                            android:id="@+id/imageView25"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView24"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginBottom="-1dp"
                            android:fontFamily="@font/light"
                            android:text="Drama"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/round_head4"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:paddingLeft="15dp"
            android:text="Projects" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ListView
                android:id="@+id/projectList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/round_head5"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:paddingLeft="15dp"
            android:text="Performance" />

    </LinearLayout>
</ScrollView>
